<% if items.any? %>
  <ul class="list-unstyled mt-2">
    <% items.each do |item| %>
      <li class="d-flex">
        <div>
          <div>
            <%= link_to item.user.name, user_path(item.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= item.created_at %></span>
            <p>Menu: <%= link_to item.menu, item_path(item) %></p>
          </div>
          <div>
            <p>
              <% if item.image.present? %>
                <%= image_tag item.image.url %>
              <% else %>
                <%= image_tag '/mark_batsu.png' %>
              <% end %>
              </p>
          </div>
          <div>
            <% if current_user == item.user %>
              <%= link_to "Delete", item, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>