<% if items.any? %>
  <div class="card-deck">
    <% items.each do |item| %>
    <div class="card mb-4">
      <div class="card-header">
        Menu: <%= link_to item.menu, item_path(item) %>
      </div>
      <div class="m-4">
        <% if item.image.present? %>
          <%= image_tag item.image.url, width: '50%', height: '50%'%>
        <% else %>
          <%= image_tag '/mark_batsu.png', width: '10%', height: '10%' %>
        <% end %>
        <div class="m-2">
        投稿者:<%= link_to item.user.name, user_path(item.user), class: "text-decoration-none" %>
        <span class="text-muted">posted at <%= item.created_at %></span>
        </div>
        <div class="m-2">
          <% if current_user == item.user %>
            <%= link_to "Delete", item, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>