  <div class="row">
    <div class="col-sm-6 offset-sm-3 mb-3">
      <%= form_with(model: @item) do |f| %>
        <div class="mb-3">
          <%= f.label :menu, 'Menu' %>
          <%= f.text_area :menu, class: 'form-control', rows: 1 %>
        </div>
        <div class="mb-3">
          <%= f.label :category, 'Category' %>
          <%= f.select :category, [["Japanese", "japanese"], ["Western", "western"], ["Chinese", "chinese"], ["Others", "others"]], include_blank: "選択してください", class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :comment, 'Comment' %>
          <%= f.text_area :comment, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>
        <%= f.submit '投稿！', class: 'btn btn-primary w-100' %>
      <% end %>
    </div>
  </div>