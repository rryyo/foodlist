<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
      <div class="card-body">
        <p>登録日: <%= @user.created_at.strftime("%Y年%m月%d日 %H:%M %Z") %></p>
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <%= render 'items/items', items: @items %>
  </div>
</div>